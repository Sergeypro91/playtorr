{
  "name": "playtor",
  "version": "0.0.1",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "backend/**/*",
    "frontend/*",
    "tooling/*"
  ],
  "scripts": {
    "first-install": "npm install --legacy-peer-deps",
    "reinstall": "npm run remove-node_modules && npm run remove-package-lock && npm run first-install",
    "remove-node_modules": "find . -name 'node_modules' -type d -prune -exec rm -rf '{}' +",
    "remove-package-lock": "rm package-lock.json",
    "start-docker-services": "cp backend/.env docker && cd docker && docker-compose -p playtorr_services up",
    "start-communication-api": "npm start -w communication-api",
    "start-main-api": "npm start -w main-api",
    "start-movie-processing-api": "npm start -w movie-processing-api",
    "start-all-apis": "npm run start-communication-api && npm run start-main-api && npm run start-movie-processing-api",
    "start:dev-communication-api": "npm start:dev -w communication-api",
    "start:dev-main-api": "npm start:dev -w main-api",
    "start:dev-movie-processing-api": "npm start:dev -w movie-processing-api",
    "start-all-apis:dev": "npm run start:dev-communication-api && npm run start:dev-main-api && npm run start:dev-movie-processing-api",
    "start:prod-communication-api": "npm start:prod -w communication-api",
    "start:prod-main-api": "npm start:prod -w main-api",
    "start:prod-movie-processing-api": "npm start:prod -w movie-processing-api",
    "start-all-apis:prod": "npm run start:prod-communication-api && npm run start:prod-main-api && npm run start:prod-movie-processing-api",
    "lint-communication-api": "npm run lint -w communication-api",
    "lint-main-api": "npm run lint -w main-api",
    "lint-movie-processing-api": "npm run lint -w communication-api",
    "lint": "npm run lint-communication-api && npm run lint-main-api && npm run lint-movie-processing-api"
  },
  "dependencies": {
    "rxjs": "^7.5.6"
  },
  "devDependencies": {
    "@nestjs/cli": "^9.1.3",
    "@nestjs/schematics": "^9.0.3",
    "@nestjs/testing": "^9.1.1",
    "@types/bcryptjs": "^2.4.2",
    "@types/connect-redis": "^0.0.18",
    "@types/express": "^4.17.14",
    "@types/express-session": "^1.17.5",
    "@types/jest": "29.0.3",
    "@types/minio": "^7.0.13",
    "@types/multer": "^1.4.7",
    "@types/node": "^18.7.18",
    "@types/passport-jwt": "^3.0.6",
    "@types/passport-local": "^1.0.34",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.38.0",
    "@typescript-eslint/parser": "^5.38.0",
    "eslint": "8.22.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.0.3",
    "prettier": "^2.7.1",
    "source-map-support": "^0.5.21",
    "supertest": "^6.2.4",
    "ts-jest": "29.0.1",
    "ts-loader": "^9.4.0",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "4.1.0",
    "typescript": "^4.8.3"
  }
}
